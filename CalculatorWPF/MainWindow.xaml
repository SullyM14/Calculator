<Window x:Class="CalculatorWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CalculatorWPF"
        mc:Ignorable="d"
        Title="CalculatorWPF" Height="450" Width="800">
    <Grid>
        <Label HorizontalAlignment="Center" FontSize="32">Calculator</Label>
        <TextBox VerticalContentAlignment="Center" TextAlignment="Center" Name="numberA" Margin="113,109,583,261">00</TextBox>
        <TextBox VerticalContentAlignment="Center" TextAlignment="Center" Name="numberB" Margin="113,207,583,149">00</TextBox>
        <Button Margin="290,124,423,255" Click="AddingNumbers">Add</Button>
        <Button Margin="400,124,308,255" Click="SubtractNumbers">Subtract</Button>
        <Button Margin="290,207,423,168" Click="MultiplyNumbers">Multiply</Button>
        <Button Margin="400,207,308,168" Click="DivideNumbers">Divide</Button>
        <Button Margin="511,124,201,255"  Click="ModulusNumbers">Modulus</Button>
        <Label VerticalAlignment="Bottom" FontSize="32" HorizontalAlignment="Left" Margin="267,0,0,0">Answer</Label>

        <Label Name="result" VerticalAlignment="Bottom" FontSize="32" HorizontalAlignment="Left" Margin="438,0,0,0" Width="362">00</Label>

    </Grid>

</Window>


